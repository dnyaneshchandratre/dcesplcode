    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>ExpectedRevenue</field>
        <field>LeadSource</field>
        <field>Probability</field>
        <field>Amount</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Opportunity Approval Steps</label>
        <name>Opportunity_Approval_Steps</name>
    </approvalStep>
    <description>If Opportunity Amount &gt; 5000, the approval should be routed to the Manager.</description>
    <emailTemplate>unfiled$public/New_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.Amount</field>
